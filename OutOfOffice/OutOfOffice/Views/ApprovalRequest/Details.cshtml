@model OutOfOffice.DTO.ApprovalRequest.ApprovalRequestOutDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Approval request</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @switch (Model.Status)
            {
                case 0:
                    @:Approved
                    break;
                case 1:
                    @:Declined
                    break;
                case 2:
                    @:Cancelled
                    break;
                case 3:
                    @:New
                    break;
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Approver)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Approver.Fullname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveRequest.Employee.Fullname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeaveRequest.Employee.Fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveRequest.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveRequest.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveRequest.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveRequest.EndDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-danger mt-2 mb-2">Back to List</a>
</div>
