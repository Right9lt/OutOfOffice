@model OutOfOffice.DTO.ApprovalRequest.ApprovalRequestDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Approval request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            

            <div data-mdb-input-init class="form-outline mb-4">
                <label asp-for="LeaveRequestId" class="control-label"></label>
                <select asp-for="LeaveRequestId" class ="form-control" asp-items="ViewBag.LeaveRequests"></select>
                <span asp-validation-for="LeaveRequestId" class="text-danger"></span>
            </div>
            <div data-mdb-input-init class="form-outline mb-4">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="0">Approve</option>
                    <option value="1">Decline</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div data-mdb-input-init class="form-outline mb-4">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

