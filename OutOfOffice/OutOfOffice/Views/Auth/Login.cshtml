@model OutOfOffice.DTO.Auth.LoginDTO
@{
    ViewData["Title"] = "Login";
}

<h2 >Login</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
            
            <div>
                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                    <div class="validation validation-summary-errors" asp-validation-summary="ModelOnly"></div>
                
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>

